{
    "name": "rodrifarias/slim-route-attributes",
    "type": "library",
    "authors": [
        {
            "name": "Rodrigo Farias",
            "email": "rodrigo.campos.farias@outlook.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Rodrifarias\\SlimRouteAttributes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rodrifarias\\SlimRouteAttributes\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.9",
        "symfony/console": "^6.0",
        "slim/psr7": "^1.5",
        "symfony/cache": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php --testdox --verbose --colors tests",
        "show-routes": "php show-routes.php show-routes",
        "phpcs": "phpcs --standard=PSR12 src",
        "phpcbf": "phpcbf --standard=PSR12 src"
    },
    "bin": ["show-routes.php"]
}
